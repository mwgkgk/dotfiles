# || Date
# ||

snippet / *d(a)?(te)?/ "Date" rb
% `date-utc` %
${0}
endsnippet

snippet dd "dd-comment" b
// `!v system('date-jiv | tr -d "\n"')` ${0}
endsnippet

snippet dd "dd-inline" w
`!v system('date-jiv | tr -d "\n"')` ${0}
endsnippet

