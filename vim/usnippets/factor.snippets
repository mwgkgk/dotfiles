snippet /^ *d(a)?(te)?/ "Date" rb
! `date-utc`

$0
endsnippet

# ||
# || Comments
# ||

snippet ; "comment-generic" w
! ${VISUAL}$0
endsnippet

snippet ! "comment" w
! ${VISUAL}$0
endsnippet

# ||
# || Vocabs
# ||

snippet i "IN" w
IN: ${0:`!v expand('%:t:r')`}
endsnippet

snippet /\b(using|u)/ "USING" wr
USING: ${0:`!p 
if not snip.v.text:
	snip.rv = "multiline"
else:
	snip.rv = snip.v.text`} ;
endsnippet

