# || Words
# ||

snippet f "word" b
: ${1:word} ( ${2:x} -- $3 )
	${VISUAL}$0
; ! `date-jiv`
endsnippet

snippet ff "word w/ lexicals" b
:: ${1:word} ( ${2:x} -- $3 )
	${VISUAL}$0
; ! `date-jiv`
endsnippet

snippet /(; )?(inline|inlin|inli|inl)/ "inline" wr
; inline
endsnippet

snippet [ "quotation" w
[ $0 
endsnippet

snippet priv "private" b
<PRIVATE

${VISUAL}$0

PRIVATE>
endsnippet

snippet t "test" b
{ ${1:t} } [ ${VISUAL}$2 ] unit-test
endsnippet

# If line above is empty, basement:
snippet /^$/ "basement-implicit" "re.match('^$', snip.buffer[snip.line-1])" re
/*
${VISUAL}${1:`!p

if not snip.v.text:
	snip.rv = ""
`}
*/ ! `date-jiv`
endsnippet

