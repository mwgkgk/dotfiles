if match.group(0) is not None:
	snip.rv = match.group(0)` ( $1 )$0
; ! `date-jiv`
endsnippet

snippet /^: ([\!:\w=\-?\.$><\[\]]+)\s*/ "double-expand-any-word-b" br
: `!p
if match.group(1) is not None:
	snip.rv = match.group(1)` ( $1 )$0
endsnippet

snippet /\)\s*$/ "triple-expand-comment-to-;" wr
)
	${VISUAL}$0 ;
endsnippet

