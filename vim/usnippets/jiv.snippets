extends local.words.markdown

snippet / *d(a)?(te)?/ "Date" rb
## `date-utc` ##
${0}
endsnippet

snippet ad "ad" i
`!v system('date-utc | tr -d "\n"')`: ${0}
endsnippet

snippet at "at" b
(at "`date-utc`"
	(${0}))
endsnippet

snippet /\s/ "/\s/" r
 ($1)
endsnippet

# This here snippet requires this here workaround to work:
snippet /^/ "^$" r
($1)`!v snippet_helpers#0a()`
endsnippet

snippet . "." i
(. $1)
endsnippet
